.anchorCover{
	width: 100%;
	height: 352rpx;
}
.anchorCover image{
	width: 100%;
	height: 352rpx;
}

.anchorHeader{
	padding:20rpx 30rpx;
	background: #fff;
}
.anchorHeader > view:nth-child(1){
	font-size: 36rpx;
	color: #333;
	padding-bottom:20rpx;
}
.anchorHeader > view:nth-child(2){
	font-size: 26rpx;
	color: #999;
}

.anchorInfo{
	margin-top: 20rpx;
	padding:20rpx 30rpx;
	background: #fff;
}

.anchorInfo > view:nth-child(1){
	font-size: 36rpx;
	color: #333;
	padding-bottom:20rpx;
}
.anchorInfo > view:nth-child(2){
	font-size: 26rpx;
	color: #999;
}
.anchorInfo .address{
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.anchorInfo .address .link{
	padding: 5rpx 10rpx;
	border: 1px solid #ddd;
}
.anchorInfo .address .copyButton{
	border:1px solid #4b9cf1;
	color: #4b9cf1;
	border-radius: 5rpx;
	padding: 4rpx 15rpx;
	margin-top: 20rpx;
}

/* 底部按钮 */
.controlButtonWrap{
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 96rpx;
	background: #fff;
	display: flex;
	justify-content: center;
	align-items: center;
	color: #666;
	font-size: 30rpx;
}
.controlButtonWrap > view{
	flex: 1;
	flex-shrink: 0;
	display: flex;
	justify-content: center;
	align-items: baseline;
}
.controlButtonWrap > view:nth-child(2){
	border-right: 1px solid #ddd;
	border-left: 1px solid #ddd;
}

.controlButtonWrap > view i{
	padding-right: 5rpx;
}

