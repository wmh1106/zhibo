.anchorWrap {
    padding: 30rpx 40rpx;
    background: #4b9cf1;
    display: flex;
    min-height: 300rpx;
}

.anchorWrap .anchorHeaderImg {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
}

.anchorWrap .anchorInfo {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    color: #fff;
    padding-left: 30rpx;
}

.anchorWrap .anchorInfo .anchorFriend {
    font-size: 28rpx;
}

.anchorWrap .anchorInfo .anchorContent {
    font-size: 28rpx;
}

.anchorButtonWrap {
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fff;
    height: 140rpx;
}

.anchorButtonWrap .anchorButton {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 400rpx;
    height: 90rpx;
    background: #4b9cf1;
    color: #fff;
    border-radius: 45rpx;
}

.anchorButtonWrap .anchorButton text {
    display: block;
    padding: 0 5rpx;
}




/* 搜索结果 */

.searchResultList {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 55rpx 35rpx;
    border-bottom: 1px solid #ddd;
    background: #ffffff;
}

.searchResultList .resultImgWrap {
    position: relative;
    width: 240rpx;
    height: 160rpx;
    flex-shrink: 1;
    margin-right: 35rpx;
}

.searchResultList .resultImgWrap .show {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.searchResultList .resultImgWrap .type {
    position: absolute;
    top: 10rpx;
    left: 10rpx;
    width: 32rpx;
    height: 32rpx;
}

.searchResultList .resultTextWrap {
    height: 160rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.searchResultList .resultTextWrap .row {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 450rpx;
    font-size: 26rpx;
    color: #999;
}

.searchResultList .resultTextWrap .row.title {
    font-size: 34rpx;
}
.noMoreData{
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    color: #999;
}
.searchResultList .resultTextWrap .row.state{
	display: inline-flex;
	justify-content: space-between;
}