.anchorBox{
	position: relative;
    min-height: 300rpx;
}
.anchorBox .anchorCoverImg{
	position: absolute;
	left:0;
	top:0;
	width:100%;
	height: 100%;
}

.anchorBox .otherButton{
	position: relative;
	z-index: 1;
	display: flex;
	justify-content: flex-end;
	color: #fff;
	font-size: 50rpx;
	padding-right: 20rpx;
}
.anchorBox .otherButton i{
	display: block;
	padding: 5rpx 10rpx;
	margin-top:30rpx;
}
.anchorWrap {
	position: relative;
    padding: 30rpx 40rpx;
    display: flex;
    min-height: 300rpx;
}

.anchorWrap .anchorHeaderImg {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
}


.anchorWrap .anchorInfo {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    color: #fff;
    padding-left: 30rpx;
}

.anchorWrap .anchorInfo .anchorFriend {
    font-size: 28rpx;
}

.anchorWrap .anchorInfo .anchorContent {
    font-size: 28rpx;
}

/* 按钮 新建话题 */

.anchorButtonWrap {
    display: flex;
    justify-content: center;
    align-items: center;
    background: #fff;
    height: 140rpx;
}

.anchorButtonWrap .anchorButton {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 400rpx;
    height: 90rpx;
    background: #4b9cf1;
    color: #fff;
    border-radius: 45rpx;
}

.anchorButtonWrap .anchorButton text {
    display: block;
    padding: 0 5rpx;
}

/* 列表 */
.row1{}
.row2{
	display: flex;
	justify-content: space-between;
}
.row2 .buttonWrap{
	display: inline-flex;
}
.row2 .buttonWrap > view{
	margin-left: 20rpx;
}
.row2 .buttonWrap > view i{
	padding-right: 5rpx;
}




