.centerLogin {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #4b9cf1;
    padding: 60rpx;
}

.centerLogin .myIcon {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
}

.centerLogin .myName {
    color: #fff;
    font-size: 36rpx;
    padding-top:40rpx;
}

.centerlist {
    background: #fff;
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    margin-top: 10px;
    padding:0 30rpx;
}
.centerfor {
    display: flex;
    align-items: center;
    height: 100rpx;
    border-bottom: 1px solid #ccc;
}
.centerfor:last-child {
    border-bottom: none;
}

.centerfor image:nth-of-type(1){
    width: 40rpx;
    height: 40rpx;
}
.centerfor view:nth-of-type(1){
    flex: 1;
     margin-left: 30rpx;
    color: #666;
}
.centerfor i{
	color: #999;
}
