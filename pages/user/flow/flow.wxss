.flowLink {
    padding: 54rpx 40rpx;
    background: #fff;
}

.flowLink input {
    border-bottom: 1px solid #ddd;
}

.changeType {
    margin-top: 16rpx;
    background: #fff;
    padding: 32rpx 40rpx;
}

.changeType radio-group {
    display: flex;
    justify-content: space-around;
}

.changeType radio-group text {
    display: block;
    width: 115rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 5rpx;
}

.changeType radio-group text.active {
    background: #4b9cfa;
    color: #fff;
}

.endButtonWrap {
    padding: 32rpx 40rpx;
}

.endButtonWrap button {
    border: none;
    color: #fff;
    background: #4b9cfa;
}
